      "Adult_Status_Epilepticus": {
        "cpg_reference": "CPG_NE_SEI",
        "demographics": {
          "ages": [25, 40, 55],
          "weights": [70, 85, 100],
          "scenario": "Generalised tonic-clonic seizure > 5 mins"
        },
        "logic_rules": [
          {
            "action": "Midazolam 5mg IM",
            "type": "Drug",
            "note": "Standard Adult Dose (Repeatable every 10 mins, Max 20mg)",
            "physiological_response": {
              "seizure": "Ceased",
              "airway": "Snoring (requiring positional management)",
              "message": "Seizure terminated. Patient post-ictal. Airway support required."
            }
          },          
          {
                  },
      "Paediatric_Febrile_Convulsion": {
        "cpg_reference": "CPG_NE_SEI_PAED",
        "demographics": {
          "ages": [1, 2, 4],
          "weights_calc": "(Age + 4) * 2",
          "scenario": "Hot to touch, generalized shaking, eyes rolled back"
        },
        "logic_rules": [
          {
            "action": "Midazolam IM (Weight Based)",
            "type": "Drug",
            "note": "200mcg/kg (Max 5mg)",
            "logic_check": "Dose matches weight calculation",
            "physiological_response": {
              "seizure": "Ceased",
              "message": "Correct dose administered. Seizure activity stopped."
            }
          },
          {
            "action": "Check Temperature",
            "type": "Assessment",
            "physiological_response": {
              "temp": 39.5,
              "message": "High fever confirmed. Suspect febrile convulsion."
            }
          },
          {
            "action": "Remove Excess Clothing",
            "type": "Skill",
            "physiological_response": {
              "message": "Passive cooling initiated. Do NOT actively cool (shivering risk)."
            }
          }
        ]
      }
    }
  },

  "week_16_Sepsis_Master_Randomizer": {
    "topic": "Infection: Sepsis & Meningococcal",
    "week": 16,
    "branches": ["Adult_Sepsis", "Paediatric_Meningococcal"],
    "logic_map": {
      "Adult_Sepsis": {
        "cpg_reference": "CPG_ME_SEP",
        "demographics": {
          "ages": [50, 68, 82],
          "history": ["UTI", "Chemo Patient", "Pneumonia"],
          "vitals": {"bp": 85, "hr": 120, "temp": 38.8, "etco2": 25}
        },
        "logic_rules": [
          {
            "action": "Fluid Bolus (Sodium Chloride)",
            "type": "Drug",
            "logic_check": "Chest Clear (No Crackles)",
            "physiological_response": {
              "bp_systolic": +10,
              "hr": -5,
              "message": "250ml Bolus administered. Perfusion improving."
            },
            "alt_response_if_check_fails": {
              "message": "WARNING: Patient has pulmonary oedema (Crackles). Fluid may worsen respiratory status."
            }
          },
          {
            "action": "Adrenaline Infusion (Consult)",
            "type": "Drug",
            "note": "Consult required for ACPII in some jurisdictions for sepsis pressors",
            "physiological_response": {
              "message": "Consult line: 'Continue fluid resuscitation up to 20ml/kg. Transport priority 1.'"
            }
          }
        ]
      },
      "Paediatric_Meningococcal": {
        "cpg_reference": "CPG_ME_MENING",
        "demographics": {
          "ages": [2, 5, 8],
          "scenario": "Lethargic, non-blanching purpuric rash on legs",
          "vitals": {"hr": 160, "bp": 70, "cap_refill": 4}
        },
        "logic_rules": [
          {
            "action": "Ceftriaxone IV/IM",
            "type": "Drug",
            "indication": "Suspected Meningococcal Septicaemia",
            "note": "50mg/kg (Max 2g)",
            "logic_check": "Allergy Status != Anaphylaxis to Penicillin",
            "physiological_response": {
              "message": "Antibiotic administered. Critical intervention for meningococcal."
            }
          },
          {
            "action": "Fluid Bolus 20ml/kg",
            "type": "Drug",
            "physiological_response": {
              "bp": +10,
              "cap_refill": 3,
              "message": "Fluid loading. Shock index improving."
            }
          }
        ]
      }
    }
  },

