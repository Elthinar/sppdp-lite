{
  "week_13_Stroke_Master_Randomizer": {
    "topic": "Neurology: Stroke & TIA",
    "week": 13,
    "branches": ["Adult_Stroke", "Adult_Stroke_Mimic"],
    "logic_map": {
      "Adult_Stroke": {
        "cpg_reference": "CPG_NE_STR",
        "demographics": {
          "names": ["Arthur", "Betty", "George", "Maria"],
          "ages": [65, 72, 79, 85],
          "scenarios": [
            {
              "type": "Ischaemic", 
              "symptoms": "Right hemiplegia, aphasia", 
              "onset": "1 hour ago (Within window)",
              "history": "Atrial Fibrillation",
              "ecg_image": "ecg_AF_with_RVR.jpg"
            },
            {
              "type": "TIA", 
              "symptoms": "Left arm weakness, resolved on arrival", 
              "onset": "2 hours ago",
              "history": "Hypertension",
              "ecg_image": "nil"
            }
          ]
        },
        "logic_rules": [
          {
            "action": "Assess FAST Score",
            "type": "Assessment",
            "physiological_response": {
              "message": "Face: Droop. Arms: Drift. Speech: Slurred/Absent. FAST Positive."
            }
          },
          {
            "action": "Assess BGL",
            "type": "Assessment",
            "required_finding": "BGL > 4.0mmol/L",
            "physiological_response": {
              "message": "BGL 5.8mmol/L. Hypoglycaemia excluded."
            }
          },
          {
            "action": "Transport Decision",
            "type": "Decision",
            "logic_check": "Onset Time < 4.5 Hours",
            "physiological_response": {
              "message": "Pre-notification sent. Thrombolysis candidate identified (Within window)."
            },
            "alt_response_if_check_fails": {
              "message": "Transport to hospital. Outside thrombolysis window (>4.5 hrs) or symptoms resolved (TIA pathway)."
            }
          }
        ]
      },
      "Adult_Stroke_Mimic": {
        "cpg_reference": "CPG_NE_STR / CPG_ME_HYPO",
        "demographics": {
          "scenario": "Confused, slurred speech, combative",
          "history": "Type 1 Diabetes"
        },
        "logic_rules": [
          {
            "action": "Assess BGL",
            "type": "Assessment",
            "required_finding": "BGL < 4.0mmol/L",
            "physiological_response": {
              "message": "BGL 2.1mmol/L. CRITICAL FINDING: Hypoglycaemia mimicking stroke."
            }
          },
          {
            "action": "Administer Glucagon IM",
            "type": "Drug",
            "logic_check": "No IV Access available",
            "physiological_response": {
              "gcs": "Improving",
              "message": "Glucagon administered. GCS improving after 10 mins."
            }
          }
        ]
      }
    }
  },

  "week_14_Seizures_Master_Randomizer": {
    "topic": "Neurology: Seizures",
    "week": 14,
    "branches": ["Adult_Status_Epilepticus", "Paediatric_Febrile_Convulsion"],
